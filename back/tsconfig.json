{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./build",
		"target": "ES2020",
		"lib": [
			"es2016",
			"dom",
			"ES2020",
			"ESNext"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": false,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"./public",
		"dist"
	]
}
